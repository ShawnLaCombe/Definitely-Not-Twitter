<h1>All Tweets</h1>
<%= link_to "New Tweet", new_tweet_path, class: "btn btn-md btn-success" %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Message</th>
      <th>User</th>
      <th colspan ="3"></th>
    </tr>
    <tbody>
      <%@tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.message %></td>
        <td><%= tweet.user.username %></td>
        <td><%= link_to "Show", tweet, class: "btn btn-xs btn-info" %></td>
        <td><%= link_to "Edit", edit_tweet_path(tweet), class: "btn btn-xs btn-default" %></td>
        <td><%= link_to "Destroy", tweet, method: :delete, data: {confirm: "Are you suere?"}, class: "btn btn-xs btn-danger" %></td>
      </tr>
      <% end %>
    </tbody>
  </thead>
</table>

